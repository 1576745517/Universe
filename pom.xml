<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>cn.xgt</groupId>
	<artifactId>universe-parent</artifactId>
	<version>1.0.5</version>
	<packaging>pom</packaging>

	<name>Universe Parent</name>
	<description>Universe 项目父模块</description>
	<url>https://github.com/1576745517/Universe</url>

	<!-- SCM信息，JitPack需要此配置 -->
	<scm>
		<connection>scm:git:git://github.com/1576745517/Universe.git</connection>
		<developerConnection>scm:git:ssh://github.com/1576745517/Universe.git</developerConnection>
		<url>https://github.com/1576745517/Universe</url>
		<tag>HEAD</tag>
	</scm>

	<properties>
		<maven.compiler.source>8</maven.compiler.source>
		<maven.compiler.target>8</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<spring-boot.version>2.7.18</spring-boot.version>
	</properties>

	<!-- 管理所有子模块 -->
	<modules>
		<module>universe-id-generator</module>
		<module>universe-mask</module>
		<!-- universe-demo 是测试模块，不需要发布 -->
		<!-- <module>universe-demo</module> -->
	</modules>

	<dependencyManagement>
		<dependencies>
			<!-- Spring Boot BOM -->
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-dependencies</artifactId>
				<version>${spring-boot.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.8.1</version>
					<configuration>
						<source>8</source>
						<target>8</target>
						<encoding>UTF-8</encoding>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
